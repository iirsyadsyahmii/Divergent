<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoucherDetails2"
    android:background="#E5E4E2">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="396dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">



            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:elevation="30dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/res2" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="307dp"

                android:layout_height="67dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="320dp"
                android:layout_marginBottom="300dp"
                android:elevation="30dp"
                android:fontFamily="sans-serif-black"
                android:shadowColor="#2B2B2B"
                android:shadowDx="6"
                android:shadowDy="5"
                android:shadowRadius="7"
                android:text="Italian Delight"
                android:textColor="#F8F8F8"
                android:textSize="32sp"
                app:layout_constraintEnd_toStartOf="@+id/imageView4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="#00FFFFFF"
                android:elevation="30dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24"
                app:tint="@color/white" />





        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/vname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:textSize="32sp"
            android:text="Free meal &amp; coffee"
            android:textColor="#36422E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
             />

        <TextView
            android:id="@+id/vdesc2"
            android:layout_width="376dp"
            android:layout_height="185dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:text="- Valid until 31 December 2021.\n\n- One voucher per table.\n\n- Not valid with any other offer or discount.\n\n- Not valid during sale or in conjunction with any special promotion.\n\n- Valid for a single transaction only."
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vname2" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Redeem"
            app:backgroundTint="#0099FF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vdesc2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>